# SAHOOL Platform Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ============================================
# JWT Configuration (REQUIRED)
# ============================================
# Generate with: openssl genrsa -out jwt_private.pem 2048
# Then: openssl rsa -in jwt_private.pem -pubout -out jwt_public.pem
# Finally: awk 'NF {sub(/\r/, ""); printf "%s\\n",$0;}' jwt_private.pem
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# JWT Settings
JWT_ISSUER=sahool
JWT_AUDIENCE=sahool-clients
JWT_ALGORITHM=RS256

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=sahool
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=sahool
DB_PASSWORD=change_this_password

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=change_this_redis_password

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_PASSWORD=change_this_rabbitmq_password

# ============================================
# MinIO Configuration
# ============================================
MINIO_USER=sahool_minio
MINIO_PASSWORD=change_this_minio_password

# ============================================
# Application Security
# ============================================
PASSWORD_PEPPER=change_this_pepper_value_min_32_chars

# ============================================
# External APIs (Optional)
# ============================================
OPENWEATHER_API_KEY=
SENTINEL_API_KEY=
OPENAI_API_KEY=

# ============================================
# Notifications (Optional)
# ============================================
FCM_KEY=
TWILIO_SID=
TWILIO_TOKEN=

# ============================================
# Monitoring (Optional)
# ============================================
GRAFANA_PASSWORD=admin

# ============================================
# Environment
# ============================================
NODE_ENV=development
LOG_LEVEL=INFO
