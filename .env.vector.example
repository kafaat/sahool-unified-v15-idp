# SAHOOL Vector Service Environment Configuration
# إعدادات خدمة المتجهات

# ============================================
# Milvus Connection
# ============================================
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_DB=sahool
MILVUS_COLLECTION=sahool_vectors

# ============================================
# Embedding Configuration
# ============================================
# Provider: sentence_transformers, openai, mock
EMBEDDING_PROVIDER=sentence_transformers

# Model name (for sentence_transformers)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Embedding dimension (must match model output)
EMBEDDING_DIM=384

# For OpenAI embeddings (if using openai provider)
# OPENAI_API_KEY=sk-...
# EMBEDDING_MODEL=text-embedding-ada-002
# EMBEDDING_DIM=1536

# ============================================
# Security Settings
# ============================================
# Require tenant_id in all requests (recommended: true for production)
TENANT_FILTER_REQUIRED=true

# ============================================
# Service Configuration
# ============================================
PORT=8111

# ============================================
# Search Defaults
# ============================================
DEFAULT_TOP_K=5
MAX_TOP_K=20
MAX_CONTEXT_CHARS=4000
