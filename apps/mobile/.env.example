# SAHOOL Field App Environment Configuration
# تكوين بيئة تطبيق سهول الميداني

# ═══════════════════════════════════════════════════════════════════
# Environment Configuration
# ═══════════════════════════════════════════════════════════════════
# Environment (development, staging, production)
ENV=development

# ═══════════════════════════════════════════════════════════════════
# Host Configuration
# ═══════════════════════════════════════════════════════════════════
# Development Host:
#   - Android Emulator: 10.0.2.2
#   - iOS Simulator: localhost
#   - Physical Device: Your machine's IP (e.g., 192.168.1.5)
DEV_HOST=10.0.2.2

# Production & Staging Hosts
PROD_HOST=api.sahool.io
STAGING_HOST=api-staging.sahool.app

# ═══════════════════════════════════════════════════════════════════
# API Configuration
# ═══════════════════════════════════════════════════════════════════
# Override URLs (optional - leave empty to use defaults based on ENV)
API_URL=
WS_URL=

# ═══════════════════════════════════════════════════════════════════
# Service Ports (Development Only)
# ═══════════════════════════════════════════════════════════════════
# These ports are only used in development environment
# In production/staging, all services are accessed through the gateway
FIELD_CORE_PORT=3000
MARKETPLACE_PORT=3010
CHAT_PORT=3011
SATELLITE_PORT=8090
INDICATORS_PORT=8091
WEATHER_PORT=8092
FERTILIZER_PORT=8093
IRRIGATION_PORT=8094
CROP_HEALTH_PORT=8095
VIRTUAL_SENSORS_PORT=8096
COMMUNITY_CHAT_PORT=8097
SPRAY_PORT=8098
EQUIPMENT_PORT=8101
INVENTORY_PORT=8102
NOTIFICATIONS_PORT=8110
GATEWAY_PORT=8000

# ═══════════════════════════════════════════════════════════════════
# Service URL Overrides (Optional)
# ═══════════════════════════════════════════════════════════════════
# Override individual service URLs for testing
# Example: MARKETPLACE_URL=http://192.168.1.10:3010
MARKETPLACE_URL=

# Maps Configuration - تكوين الخرائط
# ═══════════════════════════════════════════════════════════════════
# Default Provider: maplibre, osm, mapbox, esri_satellite, stadia
DEFAULT_MAP_PROVIDER=maplibre

# MapLibre (Free - No API Key Required)
# مجاني - لا يحتاج مفتاح
MAPLIBRE_STYLE_URL=https://tiles.openfreemap.org/styles/liberty.json

# OpenStreetMap (Free)
OSM_TILE_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png

# Mapbox (Requires API Key - اختياري)
MAPBOX_ACCESS_TOKEN=
MAPBOX_STYLE_URL=mapbox://styles/mapbox/satellite-streets-v12

# ESRI Satellite (Free for limited use)
ESRI_SATELLITE_URL=https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}

# SAHOOL Custom Tile Server
MAP_TILE_URL=https://tiles.sahool.app/{z}/{x}/{y}.png

# Offline Maps
ENABLE_OFFLINE_MAPS=true
OFFLINE_MAP_MAX_ZOOM=15
OFFLINE_MAP_CACHE_MB=500

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_CAMERA=true
ENABLE_PUSH=false
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_EDGE_AI=false
ENABLE_VOICE=false
ENABLE_AR=false

# Sync Configuration
SYNC_INTERVAL_SECONDS=30
BG_SYNC_INTERVAL_MINUTES=15
MAX_RETRY_COUNT=5
OUTBOX_BATCH_SIZE=50

# Cache Configuration
CACHE_EXPIRY_HOURS=24
IMAGE_CACHE_DAYS=7

# Timeouts
CONNECT_TIMEOUT_SECONDS=10
RECEIVE_TIMEOUT_SECONDS=30

# App Info
APP_NAME=SAHOOL Field
APP_VERSION=15.3.0
BUILD_NUMBER=1

# Tenant
DEFAULT_TENANT_ID=sahool-demo
