# AI Advisor Service Configuration
# إعدادات خدمة المستشار الذكي

# Service Settings | إعدادات الخدمة
SERVICE_NAME=ai-advisor
SERVICE_PORT=8112
LOG_LEVEL=INFO

# Anthropic Claude API | واجهة برمجة Claude
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4096
TEMPERATURE=0.7

# External Services | الخدمات الخارجية
CROP_HEALTH_AI_URL=http://crop-health-ai:8109
WEATHER_CORE_URL=http://weather-core:8002
SATELLITE_SERVICE_URL=http://satellite-service:8108
AGRO_ADVISOR_URL=http://agro-advisor:8003

# Qdrant Vector Database | قاعدة بيانات المتجهات Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=agricultural_knowledge
QDRANT_API_KEY=

# NATS Messaging | نظام الرسائل NATS
NATS_URL=nats://nats:4222
NATS_SUBJECT_PREFIX=sahool.ai-advisor

# Embeddings Model | نموذج التضمينات
EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
EMBEDDINGS_DEVICE=cpu

# Agent Configuration | إعدادات الوكلاء
MAX_AGENT_ITERATIONS=5
AGENT_TIMEOUT=120

# RAG Configuration | إعدادات RAG
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7

# Cache Settings | إعدادات التخزين المؤقت
ENABLE_CACHE=true
CACHE_TTL=3600
