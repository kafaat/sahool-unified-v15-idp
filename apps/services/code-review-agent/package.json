{
  "name": "@sahool/code-review-agent",
  "version": "1.0.0",
  "description": "AI-powered code review agent using Claude Agent SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "review": "tsx src/review-agent.ts",
    "review:structured": "tsx src/review-structured.ts",
    "review:production": "tsx src/production-agent.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "code-review",
    "agent",
    "claude",
    "ai",
    "static-analysis"
  ],
  "author": "KAFAAT",
  "license": "UNLICENSED",
  "private": true
}
