# SAHOOL Field Intelligence Service - Environment Variables
# خدمة ذكاء الحقول - متغيرات البيئة

# Service Configuration - إعداد الخدمة
PORT=8119
SERVICE_NAME=field-intelligence
SERVICE_VERSION=16.0.0
ENVIRONMENT=development

# Database (Future PostgreSQL Migration) - قاعدة البيانات
# DATABASE_URL=postgresql://user:password@localhost:5432/sahool_field_intelligence
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# NATS Messaging (Future) - نظام الرسائل
# NATS_URL=nats://localhost:4222
# NATS_USER=sahool
# NATS_PASSWORD=secret

# Redis (Future) - ريديس
# REDIS_URL=redis://localhost:6379
# REDIS_DB=0

# Service URLs - عناوين الخدمات
TASK_SERVICE_URL=http://task-service:8103
NOTIFICATION_SERVICE_URL=http://notification-service:8105
ALERT_SERVICE_URL=http://alert-service:8113
ASTRONOMICAL_SERVICE_URL=http://astronomical-calendar:8111
NDVI_SERVICE_URL=http://ndvi-engine:8107
WEATHER_SERVICE_URL=http://weather-core:8109
IOT_SERVICE_URL=http://iot-gateway:8106

# Logging - السجلات
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS - إعدادات CORS
CORS_ORIGINS=https://sahool.io,https://admin.sahool.io,http://localhost:3000

# Security - الأمان
API_KEY_ENABLED=false
# API_KEY=your-api-key-here

# Rules Engine Configuration - إعدادات محرك القواعد
DEFAULT_COOLDOWN_MINUTES=60
MAX_RULES_PER_TENANT=100
ENABLE_DEFAULT_RULES=true

# Performance - الأداء
HTTPX_TIMEOUT=30
HTTPX_MAX_CONNECTIONS=100

# Feature Flags - علامات الميزات
ENABLE_ASTRONOMICAL_INTEGRATION=true
ENABLE_AUTO_TASK_CREATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
