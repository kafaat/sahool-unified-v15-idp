# SAHOOL Crop Rotation Service Dockerfile
# Multi-stage build for Python service

FROM python:3.11-slim as base

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY rotation-requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r rotation-requirements.txt

# Create non-root user for security
RUN groupadd --gid 1000 sahool && \
    useradd --uid 1000 --gid sahool --shell /bin/bash --create-home sahool

# Copy source code
COPY --chown=sahool:sahool src/ ./src/
COPY --chown=sahool:sahool ../shared/ ./shared/

# Switch to non-root user
USER sahool

# Expose port
EXPOSE 8099

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import httpx; httpx.get('http://localhost:8099/healthz')" || exit 1

# Run the application
CMD ["python", "-m", "src.rotation_main"]
