# SAHOOL Notification Service - Environment Configuration
# نموذج إعدادات البيئة لخدمة الإشعارات

# Database Configuration
# إعدادات قاعدة البيانات
DATABASE_URL=postgres://sahool:sahool123@localhost:5432/sahool_notifications

# Schema Creation (Only for development!)
# إنشاء المخططات (فقط للتطوير!)
CREATE_DB_SCHEMA=false  # Set to 'true' only in development to auto-create tables

# Service Configuration
# إعدادات الخدمة
SERVICE_NAME=notification-service
SERVICE_VERSION=15.4.0
SERVICE_PORT=8110

# NATS Configuration (Optional)
# إعدادات NATS (اختياري)
NATS_URL=nats://localhost:4222
NATS_SUBJECT=sahool.notifications.*

# Firebase Cloud Messaging (Optional)
# رسائل السحابة من Firebase (اختياري)
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Twilio SMS Configuration (Optional)
# إعدادات Twilio للرسائل النصية (اختياري)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# SendGrid Email Configuration (Optional)
# إعدادات SendGrid للبريد الإلكتروني (اختياري)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=notifications@sahool.app
SENDGRID_FROM_NAME=SAHOOL Agriculture Platform

# Redis Configuration (Optional)
# إعدادات Redis (اختياري)
REDIS_URL=redis://localhost:6379/0

# Logging
# السجلات
LOG_LEVEL=INFO
