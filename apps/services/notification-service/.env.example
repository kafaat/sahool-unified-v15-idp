# SAHOOL Notification Service - Environment Configuration
# نموذج إعدادات البيئة لخدمة الإشعارات

# Database Configuration
# إعدادات قاعدة البيانات
DATABASE_URL=postgres://USER:PASSWORD@localhost:5432/sahool_notifications

# Schema Creation (Only for development!)
# إنشاء المخططات (فقط للتطوير!)
CREATE_DB_SCHEMA=false  # Set to 'true' only in development to auto-create tables

# Service Configuration
# إعدادات الخدمة
SERVICE_NAME=notification-service
SERVICE_VERSION=15.4.0
SERVICE_PORT=8110

# NATS Configuration (Optional)
# إعدادات NATS (اختياري)
NATS_URL=nats://localhost:4222
NATS_SUBJECT=sahool.notifications.*

# Firebase Cloud Messaging (Optional)
# رسائل السحابة من Firebase (اختياري)
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Redis Configuration (Optional)
# إعدادات Redis (اختياري)
REDIS_URL=redis://localhost:6379/0

# Logging
# السجلات
LOG_LEVEL=INFO
