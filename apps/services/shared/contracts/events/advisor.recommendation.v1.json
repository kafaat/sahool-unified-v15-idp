{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "events.advisor.recommendation.v1",
  "title": "AdvisorRecommendationV1",
  "description": "Event emitted when AI advisor generates a recommendation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "recommendation_id",
    "tenant_id",
    "recommendation_type",
    "summary",
    "created_at"
  ],
  "properties": {
    "recommendation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier of the recommendation"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid",
      "description": "Tenant that received the recommendation"
    },
    "field_id": {
      "type": "string",
      "format": "uuid",
      "description": "Optional field the recommendation applies to"
    },
    "recommendation_type": {
      "type": "string",
      "enum": [
        "irrigation",
        "fertilization",
        "pest_control",
        "planting",
        "harvesting",
        "soil_management",
        "weather_alert",
        "general"
      ],
      "description": "Type of recommendation"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Summary of the recommendation"
    },
    "summary_ar": {
      "type": "string",
      "maxLength": 500,
      "description": "Summary in Arabic"
    },
    "confidence": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Confidence level of the recommendation"
    },
    "actions_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of recommended actions"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the recommendation was created"
    }
  }
}
