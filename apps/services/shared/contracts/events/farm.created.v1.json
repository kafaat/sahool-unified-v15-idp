{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "events.farm.created.v1",
  "title": "FarmCreatedV1",
  "description": "Event emitted when a new farm is created",
  "type": "object",
  "additionalProperties": false,
  "required": ["farm_id", "tenant_id", "name", "location", "created_at"],
  "properties": {
    "farm_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier of the farm"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid",
      "description": "Tenant that owns the farm"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Farm name"
    },
    "name_ar": {
      "type": "string",
      "maxLength": 200,
      "description": "Farm name in Arabic"
    },
    "location": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "governorate": {
          "type": "string"
        },
        "region": {
          "type": "string"
        }
      }
    },
    "total_area_hectares": {
      "type": "number",
      "minimum": 0,
      "description": "Total farm area in hectares"
    },
    "owner_id": {
      "type": "string",
      "format": "uuid",
      "description": "User ID of the farm owner"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the farm was created"
    }
  }
}
