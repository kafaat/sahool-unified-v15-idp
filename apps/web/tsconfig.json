{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // Additional strict type-checking options
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@sahool/shared-ui": ["../../packages/shared-ui/src"],
      "@sahool/ui": ["../../packages/shared-ui/src"],
      "@sahool/shared-hooks": ["../../packages/shared-hooks/src"],
      "@sahool/hooks": ["../../packages/shared-hooks/src"],
      "@sahool/shared-utils": ["../../packages/shared-utils/src"],
      "@sahool/utils": ["../../packages/shared-utils/src"],
      "@sahool/api-client": ["../../packages/api-client/src"],
      "@sahool/api": ["../../packages/api-client/src"],
      "@sahool/i18n": ["../../packages/i18n/src"],
      "@sahool/shared-types": ["../../packages/shared-types/src"],
      "@sahool/shared-types/*": ["../../packages/shared-types/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "vitest.config.ts", "playwright.config.ts", "sentry.*.ts", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "e2e/**", "src/test/**", "src/__tests__/**"]
}
