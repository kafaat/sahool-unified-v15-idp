# ═══════════════════════════════════════════════════════════════════════════════
# SAHOOL Platform - CI/Test Environment
# ═══════════════════════════════════════════════════════════════════════════════

ENVIRONMENT=ci
LOG_LEVEL=WARNING

# CI uses Docker internal networking
POSTGRES_HOST=postgres
REDIS_HOST=redis
NATS_HOST=nats

# Test-specific settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=5
MFA_ENABLED=false
SAHOOL_AUTH_ENABLED=true

# Minimal CORS for CI
CORS_ALLOWED_ORIGINS=http://localhost:3000
