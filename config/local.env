# Inherit from base
# source ./base.env

ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Local development uses localhost for external access
POSTGRES_HOST=localhost
REDIS_HOST=localhost
NATS_HOST=localhost
MQTT_HOST=localhost

# Development-friendly settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
MFA_ENABLED=false
SAHOOL_AUTH_ENABLED=false

# Extended CORS for local development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://127.0.0.1:3000,http://127.0.0.1:3001
