# ═══════════════════════════════════════════════════════════════════════════════
# Redis Sentinel Environment Variables
# متغيرات البيئة لـ Redis Sentinel
# ═══════════════════════════════════════════════════════════════════════════════

# Redis Authentication
# كلمة مرور Redis (مطلوبة)
REDIS_PASSWORD=your_secure_password_here_change_in_production

# Sentinel Configuration
REDIS_MASTER_NAME=sahool-master
REDIS_SENTINEL_QUORUM=2
REDIS_SENTINEL_DOWN_AFTER=5000
REDIS_SENTINEL_FAILOVER_TIMEOUT=10000

# Redis Database
REDIS_DB=0

# Connection Settings
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_MAX_CONNECTIONS=50

# Sentinel Hosts (for application config)
REDIS_SENTINEL_HOST_1=localhost
REDIS_SENTINEL_HOST_2=localhost
REDIS_SENTINEL_HOST_3=localhost

# Resource Limits
REDIS_MAX_MEMORY=1gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Persistence
REDIS_APPENDONLY=yes
REDIS_APPENDFSYNC=everysec

# Network
REDIS_TCP_KEEPALIVE=60
REDIS_TIMEOUT=300
