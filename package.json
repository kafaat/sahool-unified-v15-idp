{
  "name": "sahool-unified",
  "version": "16.0.0",
  "description": "SAHOOL - Smart Agricultural Platform for Yemen & Middle East",
  "private": true,
  "workspaces": [
    "packages/shared-utils",
    "packages/shared-ui",
    "packages/shared-hooks",
    "packages/api-client",
    "packages/tailwind-config",
    "packages/typescript-config",
    "packages/design-system",
    "packages/i18n",
    "packages/field-shared",
    "packages/mock-data",
    "packages/nestjs-auth",
    "packages/shared-audit",
    "packages/shared-crypto",
    "packages/shared-db",
    "packages/shared-events",
    "packages/shared-types",
    "apps/web",
    "apps/admin",
    "apps/services/field-management-service",
    "apps/services/field-core",
    "apps/services/chat-service",
    "apps/services/community-chat",
    "apps/services/crop-growth-model",
    "apps/services/disaster-assessment",
    "apps/services/iot-service",
    "apps/services/lai-estimation",
    "apps/services/marketplace-service",
    "apps/services/research-core",
    "apps/services/yield-prediction",
    "apps/services/yield-prediction-service"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build:packages": "npm run build --workspace=packages/shared-utils && npm run build --workspace=packages/shared-ui && npm run build --workspace=packages/api-client && npm run build --workspace=packages/shared-hooks",
    "build:web": "npm run build --workspace=apps/web",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:all": "npm run build:packages && npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "type-check": "npm run typecheck --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules **/node_modules **/dist",
    "docs": "./scripts/generate-docs.sh",
    "docs:web": "npm run docs --workspace=apps/web",
    "docs:admin": "npm run docs --workspace=apps/admin"
  },
  "devDependencies": {
    "typedoc": "^0.27.6",
    "typescript": "5.7.2",
    "@types/node": "22.12.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "vitest": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitejs/plugin-react": "^4.5.2",
    "jsdom": "^26.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "glob": "^10.5.0",
    "qs": "^6.14.1",
    "js-yaml": "^4.1.1",
    "tmp": "^0.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.9.0"
}
