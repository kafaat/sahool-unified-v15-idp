{
  "name": "@sahool/api-client",
  "version": "16.0.0",
  "description": "SAHOOL Unified API Client - موحد للاتصال بالخوادم",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.mjs",
      "require": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./errors": {
      "import": "./dist/errors.mjs",
      "require": "./dist/errors.js",
      "types": "./dist/errors.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/types.ts src/errors.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/types.ts src/errors.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@sahool/shared-types": "*",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.0.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
