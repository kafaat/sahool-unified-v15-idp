      "types": "./dist/config.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "next-intl": "^3.26.3"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  }
}
