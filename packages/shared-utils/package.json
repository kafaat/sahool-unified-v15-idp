{
  "name": "@sahool/shared-utils",
  "version": "16.0.0",
  "description": "SAHOOL Shared Utilities - Unified utility functions for all frontend apps",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@sentry/nextjs": "^8.0.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.7.2",
    "vitest": "^3.2.0"
  },
  "optionalDependencies": {
    "@sentry/nextjs": "^8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
