{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/audit_logged.v1.json",
  "title": "Audit Logged Event",
  "description": "Event emitted when a security audit log is created",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "audit_logged",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Audit log ID"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": ["user_id", "action", "category"],
      "properties": {
        "user_id": {
          "type": "string",
          "description": "User who performed the action"
        },
        "action": {
          "type": "string",
          "description": "Action performed (e.g., auth.login.success)"
        },
        "category": {
          "type": "string",
          "enum": ["auth", "access", "data", "admin", "security", "system"],
          "description": "Audit category"
        },
        "severity": {
          "type": "string",
          "enum": ["debug", "info", "warning", "error", "critical"],
          "description": "Event severity"
        },
        "resource_type": {
          "type": "string",
          "description": "Type of resource affected"
        },
        "resource_id": {
          "type": "string",
          "description": "ID of resource affected"
        },
        "success": {
          "type": "boolean",
          "description": "Whether the action succeeded"
        },
        "ip_address": {
          "type": "string",
          "description": "Client IP address"
        },
        "details": {
          "type": "object",
          "description": "Additional details"
        }
      }
    }
  }
}
