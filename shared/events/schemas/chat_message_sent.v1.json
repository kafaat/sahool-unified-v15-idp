{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/chat_message_sent.v1.json",
  "title": "Chat Message Sent Event",
  "description": "Event emitted when a message is sent in a chat thread",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "chat_message_sent",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Thread ID this message belongs to"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": ["thread_id", "message_id", "sender_id"],
      "properties": {
        "thread_id": {
          "type": "string",
          "format": "uuid",
          "description": "Thread identifier"
        },
        "message_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique message identifier"
        },
        "sender_id": {
          "type": "string",
          "description": "User ID who sent the message"
        },
        "text": {
          "type": "string",
          "description": "Message text content"
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "List of attachment URLs"
        },
        "reply_to_id": {
          "type": "string",
          "format": "uuid",
          "description": "Message ID being replied to"
        }
      }
    }
  }
}
