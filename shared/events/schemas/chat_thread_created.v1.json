{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/chat_thread_created.v1.json",
  "title": "Chat Thread Created Event",
  "description": "Event emitted when a new chat thread is created",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "chat_thread_created",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Thread ID"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": [
        "thread_id",
        "scope_type",
        "scope_id",
        "created_by"
      ],
      "properties": {
        "thread_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique thread identifier"
        },
        "scope_type": {
          "type": "string",
          "enum": ["field", "task", "incident"],
          "description": "Type of entity this thread is attached to"
        },
        "scope_id": {
          "type": "string",
          "description": "ID of the field, task, or incident"
        },
        "created_by": {
          "type": "string",
          "description": "User ID who created the thread"
        },
        "title": {
          "type": "string",
          "description": "Optional thread title"
        }
      }
    }
  }
}
