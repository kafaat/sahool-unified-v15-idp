{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sahool.kafaat.dev/schemas/device_status.v1.json",
  "title": "DeviceStatus",
  "description": "Event emitted when device status changes",
  "type": "object",
  "required": ["device_id", "status", "last_seen"],
  "properties": {
    "device_id": {
      "type": "string",
      "description": "Unique identifier of the device"
    },
    "field_id": {
      "type": "string",
      "description": "The field ID where the device is located"
    },
    "status": {
      "type": "string",
      "enum": ["online", "offline", "warning", "error", "unknown"],
      "description": "Current device status"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last communication"
    },
    "battery_level": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Battery level percentage"
    },
    "signal_strength": {
      "type": "integer",
      "description": "Signal strength in dBm (RSSI)"
    },
    "firmware_version": {
      "type": "string",
      "description": "Current firmware version"
    },
    "error_code": {
      "type": "string",
      "description": "Error code if status is error"
    },
    "error_message": {
      "type": "string",
      "description": "Error description if status is error"
    }
  }
}
