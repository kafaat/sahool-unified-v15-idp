{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/irrigation_adjustment.v1.json",
  "title": "Irrigation Adjustment Event",
  "description": "Event emitted when irrigation needs adjustment based on weather",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "irrigation_adjustment",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Field ID this adjustment applies to"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": [
        "field_id",
        "adjustment_factor"
      ],
      "properties": {
        "field_id": {
          "type": "string",
          "description": "Field identifier"
        },
        "adjustment_factor": {
          "type": "number",
          "minimum": 0,
          "maximum": 3,
          "description": "Irrigation adjustment factor (1.0 = normal, >1 = increase, <1 = decrease)"
        },
        "recommendation_ar": {
          "type": "string",
          "description": "Recommendation in Arabic"
        },
        "recommendation_en": {
          "type": "string",
          "description": "Recommendation in English"
        },
        "reason": {
          "type": "string",
          "enum": ["heat", "rain", "humidity", "wind", "combined"],
          "description": "Reason for adjustment"
        }
      }
    }
  }
}
