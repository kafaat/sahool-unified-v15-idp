{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/ndvi_anomaly.v1.json",
  "title": "NDVI Anomaly Detected Event",
  "description": "Event emitted when an anomaly is detected in NDVI data",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "anomaly_detected",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Field ID this anomaly belongs to"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": [
        "field_id",
        "anomaly_type",
        "severity"
      ],
      "properties": {
        "field_id": {
          "type": "string",
          "description": "Field identifier"
        },
        "anomaly_type": {
          "type": "string",
          "enum": ["sudden_drop", "unusual_pattern", "spatial_anomaly", "trend_reversal"],
          "description": "Type of anomaly detected"
        },
        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Anomaly severity"
        },
        "z_score": {
          "type": "number",
          "description": "Statistical z-score of the anomaly"
        },
        "ndvi_current": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Current NDVI value"
        },
        "ndvi_expected": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Expected NDVI value based on history"
        },
        "description_ar": {
          "type": "string",
          "description": "Anomaly description in Arabic"
        },
        "description_en": {
          "type": "string",
          "description": "Anomaly description in English"
        }
      }
    }
  }
}
