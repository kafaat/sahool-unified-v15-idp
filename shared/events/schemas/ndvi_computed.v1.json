{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/ndvi_computed.v1.json",
  "title": "NDVI Computed Event",
  "description": "Event emitted when NDVI analysis is completed for a field",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "ndvi_computed",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Field ID this NDVI belongs to"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": ["field_id", "ndvi_mean", "scene_date"],
      "properties": {
        "field_id": {
          "type": "string",
          "description": "Field identifier"
        },
        "ndvi_mean": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Mean NDVI value for the field"
        },
        "ndvi_min": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Minimum NDVI value"
        },
        "ndvi_max": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Maximum NDVI value"
        },
        "ndvi_std": {
          "type": "number",
          "minimum": 0,
          "description": "Standard deviation of NDVI"
        },
        "ndvi_trend_7d": {
          "type": "number",
          "description": "7-day NDVI trend (negative = decline)"
        },
        "ndvi_trend_30d": {
          "type": "number",
          "description": "30-day NDVI trend"
        },
        "scene_date": {
          "type": "string",
          "format": "date",
          "description": "Date of satellite scene"
        },
        "cloud_cover_pct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Cloud cover percentage"
        },
        "data_source": {
          "type": "string",
          "enum": ["sentinel2", "landsat8", "mock"],
          "description": "Source of satellite data"
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Data quality score"
        }
      }
    }
  }
}
