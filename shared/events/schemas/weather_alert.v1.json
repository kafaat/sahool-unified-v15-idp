{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sahool://events/weather_alert.v1.json",
  "title": "Weather Alert Event",
  "description": "Event emitted when a weather alert is detected for a field",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "version",
    "aggregate_id",
    "tenant_id",
    "correlation_id",
    "timestamp",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "weather_alert",
      "description": "Event type discriminator"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Event schema version"
    },
    "aggregate_id": {
      "type": "string",
      "description": "Field ID this alert belongs to"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Correlation ID for request tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "payload": {
      "type": "object",
      "required": [
        "field_id",
        "alert_type",
        "severity"
      ],
      "properties": {
        "field_id": {
          "type": "string",
          "description": "Field identifier"
        },
        "alert_type": {
          "type": "string",
          "enum": [
            "heat_stress",
            "frost",
            "heavy_rain",
            "strong_wind",
            "disease_risk",
            "drought"
          ],
          "description": "Type of weather alert"
        },
        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Alert severity level"
        },
        "window_hours": {
          "type": "integer",
          "minimum": 1,
          "description": "Time window for the alert in hours"
        },
        "temp_c": {
          "type": "number",
          "description": "Temperature in Celsius"
        },
        "humidity_pct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Relative humidity percentage"
        },
        "wind_speed_kmh": {
          "type": "number",
          "minimum": 0,
          "description": "Wind speed in km/h"
        },
        "precipitation_mm": {
          "type": "number",
          "minimum": 0,
          "description": "Precipitation in mm"
        },
        "title_ar": {
          "type": "string",
          "description": "Alert title in Arabic"
        },
        "title_en": {
          "type": "string",
          "description": "Alert title in English"
        },
        "message_ar": {
          "type": "string",
          "description": "Alert message in Arabic"
        },
        "message_en": {
          "type": "string",
          "description": "Alert message in English"
        }
      }
    }
  }
}
