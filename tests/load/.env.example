# SAHOOL Load Testing Configuration
# Copy this file to .env and update values as needed

# Service URLs
BASE_URL=http://localhost:8000
FIELD_SERVICE_URL=http://localhost:8080
WEATHER_URL=http://localhost:8092
BILLING_URL=http://localhost:8089
SATELLITE_URL=http://localhost:8090
EQUIPMENT_URL=http://localhost:8101
TASK_URL=http://localhost:8103
CROP_HEALTH_URL=http://localhost:8095

# Authentication (for actual auth service when implemented)
TEST_USER_EMAIL=loadtest@sahool.io
TEST_USER_PASSWORD=LoadTest123!
TENANT_ID=tenant_loadtest

# Test Configuration
ENVIRONMENT=local
RESULTS_DIR=./results

# InfluxDB Configuration (optional)
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=sahool-k6-token
# INFLUXDB_ORG=sahool
# INFLUXDB_BUCKET=k6

# Grafana Configuration (optional)
